WindowManager:
    FileWindow:
    ImageWindow:

<FileWindow>:
    name: "file_window"
	id: file_widget
	BoxLayout:

		orientation: "vertical"
		size: root.width, root.height

		padding: 50
		spacing: 20

		Image:
			id: plant_image
			source: ""

		FileChooserListView:

			id: filechooser
			on_selection: file_widget.selected(filechooser.selection)


        Button:
            id: submit_button
            text: "Submit"
            on_release:
                app.root.current = "image_window"
                root.manager.transition.direction = "left"

<ImageWindow>:
    name: "image_window"

    Button:
        text: "Go Back"
        on_release:
            app.root.current = "file_window"
            root.manager.transition.direction = "right"
