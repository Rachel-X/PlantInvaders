WindowManager:
    SignIn:
    HomePage:
    Files:
    Comments:
    VerifiedPage:

<SignIn>:
    name: "main"
    id: signin


    FloatLayout:

        Label:
            color: 0, 0, 0, 1
            text: "Create Account"
            font_size: 30
            pos_hint: {"center_x": 0.5, "center_y": 0.9}

        Label:
            color: 0, 0, 0, 1
            text: "Email:"
            font_size: 20
            pos_hint: {"center_x": 0.15, "center_y": 0.8}

        TextInput:
            multiline: False
            height: 1
            font_size: 18
            size_hint: 0.9, 0.05
            pos_hint: {"center_x": 0.5, "center_y": 0.7}

        Label:
            color: 0, 0, 0, 1
            height: 1
            text: "Password:"
            font_size: 20
            pos_hint: {"center_x": 0.2, "center_y": 0.6}

        TextInput:
            multiline: False
            font_size: 18
            size_hint: 0.9, 0.05
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Button:
            text: "Sign In"
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            size_hint: 0.7, 0.1
            font_size:(root.width + root.height) // 55
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "left"


<FilePicker>:
    name: "file_window"
	id: filepicker

	BoxLayout:

		orientation: "vertical"
		size: root.width, root.height

		padding: 50
		spacing: 20
		canvas.before:
            Color:
                rgba: 0,0,0,1
            Rectangle:
                pos: self.pos
                size: self.size

		FileChooserListView:
			id: filechooser
			on_selection: filepicker.selected(filechooser.selection)

<Files>:
    name: "files"
    id: files

    AnchorLayout:

        anchor_x: "center"
        anchor_y: "bottom"

        Button:
            size_hint: 0.25, 0.07
            text: "Confirm"
            on_release:
                app.root.current = "comments"
                root.manager.transition.direction = "left"

<Comments>:
    name: "comments"
    id: comments

    FloatLayout:

        Image:
			id: plant_image
			source: "loosestrife.jpg"

        Label:
            color: 0, 0, 0, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.9}
            text: "Photo uploaded!"

        Button:
            text: "Back to Home"
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            size_hint: 0.7, 0.1
            font_size:(root.width + root.height) // 55
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "left"

<HomePage>:
    name: "home"
    id: homepage

    orientation: 'vertical'
    MDBoxLayout:
        orientation: 'vertical'
        # App Bar
        MDBoxLayout:
            padding: '5dp'
            adaptive_height: True

            MDIconButton:
                icon: 'plus'
                on_release:
                    app.root.current = "files"
                    root.manager.transition.direction = "left"

            MDLabel:
                text: 'Plant Invaders'
                halign: 'center'
                valign: 'top'
                font_size: 25

            MDIconButton:
                icon: 'account'

        MDBoxLayout:
            ScrollView:
                bar_width: 0

                MDBoxLayout:
                    adaptive_height: True

                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True
                        id: timeline

        MDBoxLayout:
            adaptive_height: True
            spacing: 10
            padding: 10

            MDIconButton:
                icon: 'home'

            MDLabel:
                text: 'Instagram'
                halign: 'center'
                valign: 'top'
                color: 'white'
                font_size: 25

            MDIconButton:
                icon: 'cog'


<PostCard>
    orientation: 'vertical'
    size_hint_y: None
    height: "420dp"
    spacing: 2
    elevation: 0

    MDBoxLayout:
        adaptive_height: True

        OneLineAvatarListItem:
            text: f'[b][size=14]{root.username}[/size][/b]'
            divider: None
            _no_ripple_effect: True

            ImageLeftWidget:
                source: root.avatar
                radius: [20, ]
        MDIconButton:
            icon: 'dots-vertical'

    # Post
    FitImage:
        source: root.post

    # Reactions
    MDBoxLayout:
        padding: 5, 0, 0, 0
        spacings: 2
        adaptive_height: True

        MDIconButton:
            icon: "arrow-up-bold"

        MDIconButton:
            icon: 'arrow-down-bold'


    MDBoxLayout:
        orientation: 'vertical'
        padding: 5,0,0,0
        spacing: 3
        adaptive_height: True

        MyLabel:
            text: f'{root.likes} up votes'
            bold: True

        MyLabel:
            markup: True
            text: f'[b]{root.username}[/b] {root.caption}'

        HalfOpacityLabel:
            text: f'View all {root.comments} comments'

    MDBoxLayout:
        padding: 5,0,0,0
        spacing: 2
        adaptive_height: True

        FitImage:
            source: root.profile_pic
            size_hint: None, None
            size: 20,20
            radius: [20, ]

        HalfOpacityLabel:
            text: 'Add a comment...'




<MyLabel@MDLabel>
    adaptive_height:True
    font_size: 12

<HalfOpacityLabel@MyLabel>:
    theme_text_color: 'Custom'
    text_color: 0,0,0,0.5


<VerifiedPage>:
    name: "verifiedpage"
    id: verifiedpage

    orientation: 'vertical'
        MDBoxLayout:
            orientation: 'vertical'
            # App Bar
            MDBoxLayout:
                padding: '5dp'
                adaptive_height: True

                MDIconButton:
                    icon: 'plus'
                    on_release:
                        app.root.current = "files"
                        root.manager.transition.direction = "left"

                MDLabel:
                    text: 'Plant Invaders'
                    halign: 'center'
                    valign: 'top'
                    font_size: 25

                MDIconButton:
                    icon: 'account'

    FloatLayout:

        Image:
			id: plant_image
			source: "https://images.unsplash.com/photo-1567566221756-5282476c4684?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=735&q=80"

        MDLabel:
            text: "Verify this is an invasive specie"

        MDIconButton:
            icon: 'check-circle'
