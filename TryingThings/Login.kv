WindowManager:
    SignIn:
    HomePage
    Files:
    Comments:

<SignIn>:
    name: "main"
    id: signin

    FloatLayout:

        Label:
            color: 0, 0, 0, 1
            text: "Create Account"
            font_size: 30
            pos_hint: {"center_x": 0.5, "center_y": 0.9}

        Label:
            color: 0, 0, 0, 1
            text: "Email:"
            font_size: 20
            pos_hint: {"center_x": 0.15, "center_y": 0.8}

        TextInput:
            multiline: False
            height: 1
            font_size: 18
            size_hint: 0.9, 0.05
            pos_hint: {"center_x": 0.5, "center_y": 0.7}

        Label:
            color: 0, 0, 0, 1
            height: 1
            text: "Password:"
            font_size: 20
            pos_hint: {"center_x": 0.2, "center_y": 0.6}

        TextInput:
            multiline: False
            font_size: 18
            size_hint: 0.9, 0.05
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Button:
            text: "Sign In"
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            size_hint: 0.7, 0.1
            font_size:(root.width + root.height) // 55
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "left"


<FilePicker>:
    name: "file_window"
	id: filepicker

	BoxLayout:

		orientation: "vertical"
		size: root.width, root.height

		padding: 50
		spacing: 20

		FileChooserListView:
			id: filechooser
			on_selection: filepicker.selected(filechooser.selection)

<Files>:
    name: "files"
    id: files

    AnchorLayout:

        anchor_x: "center"
        anchor_y: "bottom"

        Button:
            size_hint: 0.25, 0.07
            text: "Submit"
            on_release:
                app.root.current = "comments"
                root.manager.transition.direction = "left"

<Comments>:
    name: "comments"
    id: comments

    FloatLayout:

        Image:
			id: plant_image
			source: "loosestrife.jpg"

        Label:
            text: "Temporary! for testing."

<HomePage>:
    name: "home"
    id: homepage

    orientation: 'vertical'
    MDBoxLayout:
        orientation: 'vertical'
        # App Bar
        MDBoxLayout:
            padding: '5dp'
            adaptive_height: True

            MDIconButton:
                icon: 'plus'
                on_release:
                    app.root.current = "files"
                    root.manager.transition.direction = "left"

            MDLabel:
                text: 'Plant Invaders'
                halign: 'center'
                valign: 'top'
                font_size: 25

            MDIconButton:
                icon: 'account'

        MDBoxLayout:
            ScrollView:
                bar_width: 0

                MDBoxLayout:
                    adaptive_height: True

                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True
                        id: timeline

        MDBoxLayout:
            adaptive_height: True
            spacing: 10
            padding: 10

            MDIconButton:
                icon: 'home'

            MDLabel:
                text: 'Instagram'
                halign: 'center'
                valign: 'top'
                color: 'white'
                font_size: 25

            MDIconButton:
                icon: 'cog'


<PostCard>
    orientation: 'vertical'
    size_hint_y: None
    height: "420dp"
    spacing: 2
    elevation: 0

    MDBoxLayout:
        padding: 2
        adaptive_height: True

        OneLineAvatarListItem:
            text: f'[b][size=14]{root.username}[/size][/b]'
            divider: None
            _no_ripple_effect: True

            ImageLeftWidget:
                source: root.avatar
                radius: [20, ]
        MDIconButton:
            icon: 'dots-vertical'

    # Post
    FitImage:
        adaptive_height: True
        source: root.post

    # Reactions
    MDBoxLayout:
        padding: 5, 0, 0, 0
        spacings: 2
        adaptive_height: True

        MDIconButton:
            icon: "arrow-up-bold"

        MDIconButton:
            icon: 'arrow-down-bold'

        Widget:

        MDIconButton:
            icon: 'bookmark-outline'

    MDBoxLayout:
        orientation: 'vertical'
        padding: 5,0,0,0
        spacing: 3
        adaptive_height: True

        MyLabel:
            text: f'{root.likes} upvotes'
            bold: True

        MyLabel:
            markup: True
            text: f'[b]{root.username}[/b] {root.caption}'

        HalfOpacityLabel:
            text: f'View all {root.comments} comments'

    MDBoxLayout:
        padding: 5,0,0,0
        spacing: 2
        adaptive_height: True

        FitImage:
            source: root.profile_pic
            size_hint: None, None
            size: 20,20
            radius: [20, ]

        HalfOpacityLabel:
            text: 'Add a comment...'

    MDBoxLayout:
        padding: 9,0,0,0
        spacing: 0
        adaptive_height: True

        HalfOpacityLabel:
            font_size: 10
            text: f'{root.posted_ago} agp'



<MyLabel@MDLabel>
    adaptive_height:True
    font_size: 12

<HalfOpacityLabel@MyLabel>:
    theme_text_color: 'Custom'
    text_color: 0,0,0,0.5

